<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/chatsRecycler"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/chatMessage"
        android:layout_marginBottom="50dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Type a message"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/chatMessage"
        android:padding="12dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/chat_message_field"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendChatMessageButton"
        android:layout_marginBottom="7dp"
        app:layout_constraintLeft_toRightOf="@id/chatMessage"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="7dp"
        android:src="@drawable/ic_send_black_24dp"
        android:backgroundTint="@color/colorPrimaryDark"

        />

</androidx.constraintlayout.widget.ConstraintLayout>